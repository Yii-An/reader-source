{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://reader-source/schemas/universal-rule.json",
  "title": "Universal Rule",
  "description": "通用规则规范 - 兼容 any-reader 和 Legado 的跨平台规则格式",
  "type": "object",
  "required": ["id", "name", "host", "contentType"],
  "properties": {
    "id": {
      "type": "string",
      "description": "规则唯一标识 (UUID 格式)",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "description": "规则名称",
      "minLength": 1
    },
    "host": {
      "type": "string",
      "description": "规则域名 (如 https://example.com)",
      "format": "uri"
    },
    "icon": {
      "type": "string",
      "description": "图标 URL"
    },
    "author": {
      "type": "string",
      "description": "规则作者"
    },
    "group": {
      "type": "string",
      "description": "规则分组"
    },
    "sort": {
      "type": "integer",
      "description": "排序权重",
      "default": 0
    },
    "enabled": {
      "type": "boolean",
      "description": "是否启用规则",
      "default": true
    },
    "comment": {
      "type": "string",
      "description": "规则备注说明"
    },
    "jsLib": {
      "type": "string",
      "description": "JS 函数库 (复杂规则共用函数)"
    },
    "contentType": {
      "type": "string",
      "description": "内容类型",
      "enum": ["novel", "manga", "video", "audio", "rss", "novelmore"],
      "enumDescriptions": [
        "小说/文字",
        "漫画/图片",
        "视频",
        "音频/有声",
        "RSS 订阅",
        "小说(增强功能)"
      ]
    },
    "userAgent": {
      "type": "string",
      "description": "自定义 User-Agent"
    },
    "headers": {
      "type": "object",
      "description": "自定义请求头",
      "additionalProperties": { "type": "string" }
    },
    "loadJs": {
      "type": "string",
      "description": "全局 JS 脚本 (页面加载时执行)"
    },
    "search": {
      "$ref": "#/$defs/searchRule"
    },
    "detail": {
      "$ref": "#/$defs/detailRule"
    },
    "chapter": {
      "$ref": "#/$defs/chapterRule"
    },
    "discover": {
      "$ref": "#/$defs/discoverRule"
    },
    "content": {
      "$ref": "#/$defs/contentRule"
    },
    "anyReader": {
      "$ref": "#/$defs/anyReaderBaseFields"
    },
    "legado": {
      "$ref": "#/$defs/legadoBaseFields"
    },
    "_fieldSources": {
      "type": "object",
      "description": "字段来源标记 (内部使用)",
      "additionalProperties": {
        "type": "string",
        "enum": ["any-reader", "legado", "both"]
      }
    },
    "_meta": {
      "$ref": "#/$defs/ruleMeta"
    }
  },
  "$defs": {
    "selectorExpression": {
      "type": "string",
      "description": "选择器表达式，支持: @css: / @xpath: / @json: / @js: / @regex: 前缀",
      "examples": [
        "@css:.book-list li",
        "@xpath://div[@class='title']/text()",
        "@json:$.data[*].name",
        "@js:result.map(i => i.title)",
        "h1.title@text",
        "$.data.items[*]"
      ]
    },
    "searchRule": {
      "type": "object",
      "description": "搜索规则配置",
      "required": ["enabled", "url", "list", "name", "result"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "是否启用搜索功能",
          "default": true
        },
        "url": {
          "type": "string",
          "description": "搜索 URL 模板，使用 {{keyword}} 或 $keyword 表示搜索词，{{page}} 或 $page 表示页码",
          "examples": [
            "https://example.com/search?q={{keyword}}&page={{page}}",
            "https://api.example.com/search?keyword=$keyword"
          ]
        },
        "list": {
          "$ref": "#/$defs/selectorExpression",
          "description": "搜索结果列表选择器"
        },
        "name": {
          "$ref": "#/$defs/selectorExpression",
          "description": "书名/标题选择器"
        },
        "cover": {
          "$ref": "#/$defs/selectorExpression",
          "description": "封面图片选择器"
        },
        "author": {
          "$ref": "#/$defs/selectorExpression",
          "description": "作者选择器"
        },
        "description": {
          "$ref": "#/$defs/selectorExpression",
          "description": "简介/描述选择器"
        },
        "latestChapter": {
          "$ref": "#/$defs/selectorExpression",
          "description": "最新章节选择器"
        },
        "wordCount": {
          "$ref": "#/$defs/selectorExpression",
          "description": "字数选择器"
        },
        "tags": {
          "$ref": "#/$defs/selectorExpression",
          "description": "标签/分类选择器"
        },
        "result": {
          "$ref": "#/$defs/selectorExpression",
          "description": "结果 URL 选择器 (跳转到章节列表或详情页)"
        },
        "anyReader": {
          "type": "object",
          "description": "any-reader 特有字段",
          "properties": {
            "items": {
              "type": "string",
              "description": "搜索结果项模板"
            }
          }
        }
      }
    },
    "detailRule": {
      "type": "object",
      "description": "详情页规则配置 (Legado 特有流程)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "是否启用详情页"
        },
        "url": {
          "type": "string",
          "description": "详情页 URL"
        },
        "init": {
          "type": "string",
          "description": "预处理规则"
        },
        "name": {
          "$ref": "#/$defs/selectorExpression",
          "description": "书名选择器"
        },
        "author": {
          "$ref": "#/$defs/selectorExpression",
          "description": "作者选择器"
        },
        "cover": {
          "$ref": "#/$defs/selectorExpression",
          "description": "封面选择器"
        },
        "description": {
          "$ref": "#/$defs/selectorExpression",
          "description": "简介选择器"
        },
        "latestChapter": {
          "$ref": "#/$defs/selectorExpression",
          "description": "最新章节选择器"
        },
        "wordCount": {
          "$ref": "#/$defs/selectorExpression",
          "description": "字数选择器"
        },
        "tags": {
          "$ref": "#/$defs/selectorExpression",
          "description": "分类选择器"
        },
        "tocUrl": {
          "$ref": "#/$defs/selectorExpression",
          "description": "目录 URL 选择器"
        },
        "canRename": {
          "type": "boolean",
          "description": "是否允许修改书名和作者"
        }
      }
    },
    "chapterRule": {
      "type": "object",
      "description": "章节/目录规则配置",
      "required": ["list", "name", "result"],
      "properties": {
        "url": {
          "type": "string",
          "description": "章节列表 URL (使用 $result 引用上一步结果)"
        },
        "list": {
          "$ref": "#/$defs/selectorExpression",
          "description": "章节列表选择器"
        },
        "name": {
          "$ref": "#/$defs/selectorExpression",
          "description": "章节名选择器"
        },
        "cover": {
          "$ref": "#/$defs/selectorExpression",
          "description": "章节封面选择器"
        },
        "time": {
          "$ref": "#/$defs/selectorExpression",
          "description": "更新时间选择器"
        },
        "result": {
          "$ref": "#/$defs/selectorExpression",
          "description": "章节 URL 选择器 (正文地址)"
        },
        "nextUrl": {
          "$ref": "#/$defs/selectorExpression",
          "description": "下一页目录 URL"
        },
        "isVip": {
          "$ref": "#/$defs/selectorExpression",
          "description": "VIP 标识选择器"
        },
        "isPay": {
          "$ref": "#/$defs/selectorExpression",
          "description": "付费标识选择器"
        },
        "info": {
          "$ref": "#/$defs/selectorExpression",
          "description": "章节信息选择器"
        },
        "multiRoads": {
          "type": "object",
          "description": "多线路配置 (any-reader 特有)",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "是否启用多线路"
            },
            "roads": {
              "type": "string",
              "description": "线路列表选择器"
            },
            "roadName": {
              "type": "string",
              "description": "线路名选择器"
            }
          }
        },
        "anyReader": {
          "type": "object",
          "description": "any-reader 特有字段",
          "properties": {
            "items": {
              "type": "string",
              "description": "章节项模板"
            },
            "lock": {
              "type": "string",
              "description": "章节锁定标识选择器"
            }
          }
        }
      }
    },
    "discoverRule": {
      "type": "object",
      "description": "发现页规则配置",
      "required": ["enabled", "url", "list", "name", "result"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "是否启用发现功能",
          "default": true
        },
        "url": {
          "type": "string",
          "description": "发现页 URL 或分类配置 (支持 @js: 动态生成)",
          "examples": [
            "https://example.com/explore?page=$page",
            "@js:\nvar categories = ['热门', '最新'];\ncategories.map(c => `${c}::https://example.com/${c}`).join('\\n')"
          ]
        },
        "list": {
          "$ref": "#/$defs/selectorExpression",
          "description": "发现结果列表选择器"
        },
        "name": {
          "$ref": "#/$defs/selectorExpression",
          "description": "名称选择器"
        },
        "cover": {
          "$ref": "#/$defs/selectorExpression",
          "description": "封面选择器"
        },
        "author": {
          "$ref": "#/$defs/selectorExpression",
          "description": "作者选择器"
        },
        "description": {
          "$ref": "#/$defs/selectorExpression",
          "description": "描述选择器"
        },
        "tags": {
          "$ref": "#/$defs/selectorExpression",
          "description": "标签选择器"
        },
        "latestChapter": {
          "$ref": "#/$defs/selectorExpression",
          "description": "最新章节选择器"
        },
        "wordCount": {
          "$ref": "#/$defs/selectorExpression",
          "description": "字数选择器"
        },
        "result": {
          "$ref": "#/$defs/selectorExpression",
          "description": "结果 URL 选择器"
        },
        "nextUrl": {
          "$ref": "#/$defs/selectorExpression",
          "description": "下一页 URL"
        },
        "anyReader": {
          "type": "object",
          "description": "any-reader 特有字段",
          "properties": {
            "items": {
              "type": "string",
              "description": "发现结果项模板"
            }
          }
        }
      }
    },
    "contentRule": {
      "type": "object",
      "description": "正文/内容规则配置",
      "required": ["items"],
      "properties": {
        "url": {
          "type": "string",
          "description": "正文页 URL"
        },
        "items": {
          "$ref": "#/$defs/selectorExpression",
          "description": "正文内容选择器 (小说为文本，漫画为图片列表)"
        },
        "nextUrl": {
          "$ref": "#/$defs/selectorExpression",
          "description": "下一页正文 URL"
        },
        "decoder": {
          "type": "string",
          "description": "内容解密器脚本"
        },
        "imageHeaders": {
          "type": "string",
          "description": "图片请求头 (JSON 格式)"
        },
        "webView": {
          "type": "boolean",
          "description": "是否使用 WebView 加载正文"
        },
        "payAction": {
          "type": "string",
          "description": "付费购买操作"
        },
        "sourceRegex": {
          "type": "string",
          "description": "资源正则 (用于匹配视频/音频资源)"
        },
        "replaceRules": {
          "type": "array",
          "description": "正文净化替换规则",
          "items": {
            "type": "object",
            "required": ["pattern", "replacement"],
            "properties": {
              "pattern": {
                "type": "string",
                "description": "匹配模式 (正则表达式)"
              },
              "replacement": {
                "type": "string",
                "description": "替换内容"
              },
              "isRegex": {
                "type": "boolean",
                "description": "是否为正则表达式",
                "default": true
              }
            }
          }
        },
        "legado": {
          "type": "object",
          "description": "Legado 特有字段",
          "properties": {
            "webJs": {
              "type": "string",
              "description": "WebView 执行的 JS 脚本"
            },
            "replaceRegex": {
              "type": "string",
              "description": "正则替换规则"
            },
            "imageStyle": {
              "type": "string",
              "description": "图片样式配置"
            }
          }
        }
      }
    },
    "anyReaderBaseFields": {
      "type": "object",
      "description": "any-reader 基本设置特有字段",
      "properties": {
        "useCryptoJS": {
          "type": "boolean",
          "description": "是否使用 CryptoJS 加密库"
        },
        "cookies": {
          "type": "string",
          "description": "Cookie 存储"
        },
        "postScript": {
          "type": "string",
          "description": "脚本后处理"
        },
        "viewStyle": {
          "type": "integer",
          "description": "视图样式 (0: 默认)",
          "default": 0
        }
      }
    },
    "legadoBaseFields": {
      "type": "object",
      "description": "Legado 基本设置特有字段",
      "properties": {
        "bookUrlPattern": {
          "type": "string",
          "description": "书籍 URL 正则匹配"
        },
        "enabledCookieJar": {
          "type": "boolean",
          "description": "是否启用 Cookie 罐"
        },
        "respondTime": {
          "type": "integer",
          "description": "响应超时时间 (毫秒)"
        },
        "weight": {
          "type": "integer",
          "description": "权重 (用于排序)"
        },
        "customOrder": {
          "type": "integer",
          "description": "自定义排序"
        },
        "lastUpdateTime": {
          "type": "integer",
          "description": "最后更新时间 (时间戳)"
        },
        "loginUrl": {
          "type": "string",
          "description": "登录 URL"
        },
        "loginCheckUrl": {
          "type": "string",
          "description": "登录检测 URL"
        },
        "loginUi": {
          "type": "string",
          "description": "登录 UI 配置 (JSON 格式)"
        },
        "loginCheckJs": {
          "type": "string",
          "description": "登录检测 JS 脚本"
        }
      }
    },
    "ruleMeta": {
      "type": "object",
      "description": "规则元数据 (内部使用)",
      "properties": {
        "sourceFormat": {
          "type": "string",
          "description": "规则来源格式",
          "enum": ["any-reader", "legado", "universal"]
        },
        "version": {
          "type": "string",
          "description": "规则版本"
        },
        "createdAt": {
          "type": "integer",
          "description": "创建时间 (时间戳)"
        },
        "updatedAt": {
          "type": "integer",
          "description": "更新时间 (时间戳)"
        },
        "originalData": {
          "description": "原始数据 (用于无损转换)"
        }
      }
    }
  }
}
